<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Стиль для левой части страницы регистрации -->
    <Style x:Key="LeftBorderRegistartion" TargetType="Border">
        <Setter Property="Background" Value="#25292E" />
        <Setter Property="Padding" Value="70 80 70 0" />
    </Style>

    <!-- Стиль для правой части страницы регистрации -->
    <Style x:Key="RightBorderRegistartion" TargetType="Border">
        <Setter Property="Background" Value="#F9F9F9" />
        <Setter Property="Padding" Value="20 20 20 0" />
    </Style>

    <!-- Стиль для главной панели -->
    <Style x:Key="TopBarStyle" TargetType="Border">
        <Setter Property="Background" Value="#EDEDED"/>
        <Setter Property="CornerRadius" Value="30"/>
        <Setter Property="Padding" Value="40 0 0 0"/>
        <Setter Property="Height" Value="60"/>
    </Style>

    <!-- Стиль для аватара справа сверху на главной панели -->
    <Style x:Key="RoundAvatarBorderStyle" TargetType="Border">
        <Setter Property="Height" Value="50"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="CornerRadius" Value="100"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Clip">
            <Setter.Value>
                <EllipseGeometry Center="25,25" RadiusX="25" RadiusY="25"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для панели выхода из аккаунта -->
    <Style x:Key="UserPopupStyle" TargetType="Popup">
        <Setter Property="AllowsTransparency" Value="True"/>
        <Setter Property="PopupAnimation" Value="None"/>
        <Setter Property="StaysOpen" Value="False"/>
        <Setter Property="Placement" Value="Center"/>
        <Setter Property="HorizontalOffset" Value="-35"/>
        <Setter Property="VerticalOffset" Value="26"/>
    </Style>

    <!-- Стиль для контента панели выхода из аккаунта -->
    <Style x:Key="PopupContentStyle" TargetType="Border">
        <Setter Property="Background" Value="#DEDEDE"/>
        <Setter Property="Width" Value="200"/>
        <Setter Property="CornerRadius" Value="0 30 30 30"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- Стиль для подолжки аватара -->
    <Style x:Key="ProfilePageMainBorderStyle" TargetType="Border">
        <Setter Property="Padding" Value="30 0"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

    <!-- Стиль для аватара на странице профиля -->
    <Style x:Key="ProfileAvatarStyle" TargetType="Border">
        <Setter Property="Width" Value="300"/>
        <Setter Property="Height" Value="300"/>
        <Setter Property="Background" Value="#EFEFEF"/>
        <Setter Property="CornerRadius" Value="100"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Clip">
            <Setter.Value>
                <EllipseGeometry Center="150,150" RadiusX="150" RadiusY="150"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для секции, которая показывает, что пользователь не добавил книг/не написал отзывов -->
    <Style x:Key="ContentSectionStyle" TargetType="Border">
        <Setter Property="Background" Value="#F8F8F8"/>
        <Setter Property="CornerRadius" Value="10"/>
        <Setter Property="Margin" Value="0 35 0 10"/>
    </Style>

</ResourceDictionary>